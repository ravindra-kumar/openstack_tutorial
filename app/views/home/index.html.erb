<!-- Page Content -->
<div class="container">
    <div class="row">
        <% @posts.each do |post| %>
            <!-- Blog Post Content Column -->
            <div class="col-lg-6">
                <!-- Title -->
                <h1><%= link_to post.title, post_path(post) %> </h1>
                <!-- Date/Time -->
                <p><span class="glyphicon glyphicon-time"></span> Posted on <%= post.created_at.strftime('%c') %></p>
                <!-- Post Content -->
                <p class="lead"><%= post.post_message %></p>
                <hr>
            </div>
        <% end %>
    </div>
    <%= will_paginate @posts %>
</div>
